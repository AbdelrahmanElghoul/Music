<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/FolderFrame"
        android:layout_above="@id/Linear"/>

    <!--Controler-->
    <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:id="@+id/Relative"
       android:background="#083539"
       android:gravity="center_vertical"
       android:layout_alignParentBottom="true">



       <ImageView
           android:layout_width="50dp"
           android:layout_alignParentStart="true"
           android:layout_height="50dp"
           android:padding="5dp"
           android:src="@drawable/audio"
           android:id="@+id/defaultIcon"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/audioName"
           android:textColor="#ffffff"
           android:layout_toEndOf="@id/defaultIcon"
           android:layout_toStartOf="@id/btnPrevious"
           android:layout_centerVertical="true"
           android:hint="name"
           />
       <ImageButton
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:padding="10dp"
           android:src="@drawable/play"
           android:onClick="Playbtn"
           android:background="@null"
           android:scaleType="fitCenter"
           android:visibility="visible"
           android:id="@+id/btnPlay"
           android:clickable="false"
           android:layout_toStartOf="@id/btnNext"
           />
       <ImageButton
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:padding="10dp"
           android:src="@drawable/pause"
           android:onClick="Pausebtn"
           android:background="@null"
           android:visibility="invisible"
           android:scaleType="fitCenter"
           android:id="@+id/btnPause"
           android:clickable="false"
           android:layout_toStartOf="@id/btnNext"
           />
        <!--Empty View for Relations-->
       <ImageButton
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:padding="10dp"
           android:src="@null"
           android:background="@null"
           android:id="@+id/btn"
           android:scaleType="fitCenter"
           android:visibility="invisible"
           android:clickable="false"
           android:layout_toStartOf="@id/btnNext"
           />
       <ImageButton
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:padding="10dp"
           android:src="@drawable/next"
           android:onClick="Previousbtn"
           android:scaleType="fitCenter"
           android:rotation="180"
           android:background="@null"
           android:clickable="false"
           android:id="@+id/btnPrevious"
           android:layout_toStartOf="@id/btn"
           android:layout_centerVertical="true"/>
       <ImageButton
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:padding="10dp"
           android:clickable="false"
           android:src="@drawable/next"
           android:onClick="Nextbtn"
           android:id="@+id/btnNext"
           android:background="@null"
           android:scaleType="fitCenter"
           android:layout_alignParentEnd="true"
           android:layout_centerVertical="true"/>



   </RelativeLayout>

    <!--SeekbR-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Relative"
        android:layout_alignParentStart="true"
        android:background="#eefff0"
        android:gravity="center"
        android:id="@+id/Linear"
        android:orientation="horizontal"
        android:paddingStart="3dp"
        android:paddingEnd="3dp">

        <TextView
            android:id="@+id/CurrentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00:00" />

        <SeekBar
            android:id="@+id/SeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1" />

        <TextView
            android:id="@+id/TotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00:00" />

    </LinearLayout>


</RelativeLayout>